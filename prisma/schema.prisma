//Sqlite
datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  id    Int     @id @default(autoincrement())
  phone String  @unique
  name  String
  pictureTheme String
  phraseTheme String
  password String
  @@map("users")
} 